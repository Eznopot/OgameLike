{% extends 'login.html.twig' %}
{% block title %}

    Register In!
{% endblock %}

{% block body %}
<div class="row justify-content-center" style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
  <div class="card text-white bg-primary mb-3" style="margin: 0 auto; width: auto; padding: 5px;">
      <p class="card-title"><h3>Register in!</h3></p>
      <style>
      </style>

      {{ form_start(createRegisterForm, {
          'attr' : {
              'class' : 'form-content',
              'id' : 'register-form'
          }
      }) }}
      <div class="form-group form-label" id="email">
          {{ form_widget(createRegisterForm.Email) }}
      </div>
      <div class="form-group form-label" id="pwd">
          {{ form_widget(createRegisterForm.Password) }}
      </div>
      <div class="form-group container-align-button", id="button-group">
          {{ form_widget(createRegisterForm.confirmer) }}
          {{ form_widget(createRegisterForm.reset) }}
      </div>
      {{ form_end(createRegisterForm) }}
  </div>
</div>
{% endblock %}
