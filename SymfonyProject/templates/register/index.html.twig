{% extends 'base.html.twig' %}
{% block title %}Register In!{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="login-form bg-light mt-4 p-4">
            <form method="post" class="row g-3">
                <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
                <div class="col-12">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="col-12">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <div class="col-12">
                    <button class="btn btn-lg btn-primary float-end" type="submit">
                        register
                    </button>
                </div>
                </br>
                </br>
            </form>
            <div class="col-12">
                <a href="{{ path('login') }}">Already Registered ?</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
