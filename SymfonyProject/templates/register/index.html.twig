{% extends 'base.html.twig' %}
{% block title %}
    Register In!
{% endblock %}

{% block body %}
    <style>
    </style>

    {{ form_start(createRegisterForm, {
        'attr' : {
            'class' : 'form-content',
            'id' : 'register-form'
        }
    }) }}
    <div class="form-group" id="email">
        {{ form_label(createRegisterForm.Email) }}
        {{ form_widget(createRegisterForm.Email) }}
    </div>
    <div class="form-group" id="pwd">
        {{ form_label(createRegisterForm.Password) }}
        {{ form_widget(createRegisterForm.Password) }}
    </div>
    <div class="form-group container-align-button", id="button-group">
        {{ form_widget(createRegisterForm.confirmer) }}
        {{ form_widget(createRegisterForm.reset) }}
    </div>
    {{ form_end(createRegisterForm) }}
{% endblock %}
