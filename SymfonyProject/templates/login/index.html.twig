{% extends 'base.html.twig' %}
{% block title %}
    Log In!
{% endblock %}

{% block body %}
<form action="{{ path('connexion_login') }}" method="post">
    <div class="form-group">
        <input placeholder="Adress email" require name="_username"
        type="text" class="form-control">
    </div>
    <div class="form-group">
        <input placeholder="password" require name="_password"
        type="password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>
{% endblock %}