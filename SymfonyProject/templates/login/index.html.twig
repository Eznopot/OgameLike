{% extends 'recycler.html.twig' %}

{% block title %}
    Log In!
{% endblock %}

{% block recycler_name %}Log In!{% endblock %}

{% block body %}
<div class="card text-white bg-primary mb-3" style="margin: 0 auto; width: auto; padding: 5px;">
  <form action="{{ path('connexion_login') }}" method="post">
      <div class="form-group">
          <input placeholder="Email address" require name="_username"
          type="text" class="form-control">
      </div>
      <div class="form-group">
          <input placeholder="Password" require name="_password"
          type="password" class="form-control">
      </div>
      <div class="form-group">
          <button type="submit" class="btn btn-success">Connexion</button>
      </div>
  </form>
</div>
{% endblock %}