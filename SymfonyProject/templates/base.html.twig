<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% block javascripts_page %}
            {{ encore_entry_script_tags('app') }}

            <script type="text/javascript">
                function addGoldUnit(prodGoldPerSecond, prodUnitePerSecond) {
                    let userGold;
                    let userUnites;

                    let addGold = document.querySelectorAll('[id=user_gold]')[0].innerHTML;
                    let addUnites = document.querySelectorAll('[id=user_unites]')[0].innerHTML;

                    setInterval(() => {
                        userGold = document.querySelectorAll('[id=user_gold]');
                        userUnites = document.querySelectorAll('[id=user_unites]');

                        addGold += prodGoldPerSecond;
                        addUnites += prodUnitePerSecond;

                        for (let i = 0; i < userGold.length; i++) {
                            userGold[i].innerHTML = parseInt(addGold) + ' Gold';
                        }
                        for (let i = 0; i < userUnites.length; i++) {
                            userUnites[i].innerHTML = parseInt(addUnites) + ' Unites';
                        }
                    }, 1000);
                }
            </script>

        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href={{ path('home') }}>OgameLike</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('home') }}>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('player') }}>Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('technology') }}>Technology</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href={{ path('build_production') }}>Build production</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('build_buy') }}>Build buy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('ladder') }}>Ladder</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <p id="user_gold" class="text-warning" style="margin-right: 16px;">{{ user.gold }} Gold</p>
                        <p id="user_unites" class="text-warning" style="margin-right: 16px;">{{ user.units }} Unites</p>
                        {% set prodGoldPerSecond = 0 %}
                        {% set prodUnitePerSecond = 0 %}

                        {% for buildOwned in user.batimentsOwned %}
                            {% if not buildOwned.upgrading %}
                                {% set prodGoldPerSecond = prodGoldPerSecond + buildOwned.type.goldPerHour / 3600 %}
                                {% set prodUnitePerSecond = prodUnitePerSecond + buildOwned.type.unitesPerHour / 3600 %}
                            {% endif %}
                        {% endfor %}
                        <p class="text-warning">{{ prodGoldPerSecond | number_format(3, '.', ',')}} Gold/sec</p>
                        <a class="nav-link" href={{ path('connexion_logout') }}>Logout</a>
                        <script type="text/javascript">
                            addGoldUnit(
                                {{ prodGoldPerSecond | json_encode() | raw }},
                                {{ prodUnitePerSecond | json_encode() | raw }}
                            );
                        </script>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container">
          {% block body %}{% endblock %}
        </div>
    </body>
</html>