{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Home</h1>
    <div class="card" style="margin: 0 auto; width: 20rem;">
        <div class="card-header"> Gold </div>
            <div class="card-body">
                <p class="card-title">{{ user_gold }}</p>
                <p class="card-text"> {{ gold_income }}/h </p>
            </div>
        </div>
    </div>
    <div class="card" style="overflow:scroll; height:400px; float: left; padding: 1rem;">
        <h2>Your Technologies</h2>
    {% for elem in technos_owned %}
        <div class="card text-white bg-primary mb-3" style="margin: 0 auto; width: 20rem;">
            <div class="card-header"> {{ elem.name }}</div>
            <div class="card-body">
                <p class="card-title">{{ elem.description }}</p>
                <p class="card-text">dmg : {{ elem.damagePerLevel }} | gold : {{ elem.goldBoostPerLevel }} </p>
            </div>
        </div>
    {% endfor %}
    </div>
    <div class="card" style="overflow:scroll; height:400px; float: right; padding: 1rem;">
    <h2>Your Batiments</h2>
    {% for elem in batiments_owned %}
        <div class="card text-white bg-primary mb-3" style="margin: 0 auto; width: 20rem;">
            <div class="card-header"> {{ elem.name }}</div>
            <div class="card-body">
                <p class="card-title">{{ elem.description }}</p>
                <p class="card-text">dmg : {{ elem.damagePerLevel }} | gold : {{ elem.goldBoostPerLevel }} </p>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
